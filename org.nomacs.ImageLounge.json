{
    "app-id": "org.nomacs.ImageLounge",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-22.08",
    "sdk": "org.kde.Sdk",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--filesystem=home",
        "--filesystem=/run/media"
    ],
    "command": "nomacs",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/aclocal",
        "/share/man",
        "*.la", "*.a"
    ],
    "modules": [
        {
            "name": "exiv2",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/Exiv2/exiv2/releases/download/v0.27.7/exiv2-0.27.7-Source.tar.gz",
                    "sha256": "70629dc27e3d4dd5c3fa91afbea93166d338b1de284e6a4c44bbf9dcfe7bbc6d"
                }
            ]
        },
        {
            "name": "opencv",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/opencv/opencv/archive/4.8.0.tar.gz",
                    "sha512": "48738c3e7460a361274357aef1dd427082ccd59f749d6317d92a414b3741ce6116ea15ed4fedd2d47a25e456c705f3ba114357558646097bfc0e6dba9b3b865c"
                }
            ]
        },
        {
            "name": "libraw",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.libraw.org/data/LibRaw-0.21.1.tar.gz",
                    "sha512": "8d11df0be2af5fd8a8251f150ccd59103319606f52effff541ee43e97ceb64f1a00a02bba7b730aedd0c1c705c1e465793c8a2a52769712c1102af7f5534dd5d"
                }
            ]
        },
        {
            "name": "quazip",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/stachenov/quazip/archive/v1.4.tar.gz",
                    "sha256": "79633fd3a18e2d11a7d5c40c4c79c1786ba0c74b59ad752e8429746fe1781dd6"
                }
            ]
        },
        {
            "name": "nomacs",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DUSE_SYSTEM_QUAZIP=ON"
            ],
            "subdir": "ImageLounge",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/nomacs/nomacs/archive/3.16.224.tar.gz",
                    "sha512": "7ca8e713eedd71bc3dd3804a9a09ece15badb74949b155ea4da72a0ea129be173c8d0951604a6139d4490525cd420da8635773c11f0d133f666a48dcd9064257"
                },
                {
                    "type": "archive",
                    "dest": "ImageLounge/plugins",
                    "url": "https://github.com/nomacs/nomacs-plugins/archive/3.16.tar.gz",
                    "sha512": "cd72f6ddbe3e07d7ed97f08405bac7574f4f3285c81e835f5630e011c8a9b105f23d892fed8084cb35ce521aca5524db071d0edb8bb04850dd2209d9ed019747"
                }
            ]
        }
    ]
}
